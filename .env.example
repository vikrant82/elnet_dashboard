# Environment variables for Power Usage Tracker

# The full URL to the live updates API endpoint
LIVE_UPDATES_API_URL=http://103.60.213.38:8091/api/Dashboard/GetLiveUpdates

# The full URL to the home data API endpoint
HOME_DATA_API_URL=http://103.60.213.38:8091/api/Dashboard/HomeData

# The low balance threshold for alerts
LOW_BALANCE_THRESHOLD=100

# The Bearer Token for API authentication
POWER_USAGE_BEARER_TOKEN=your_secret_token_here

# The name of the database file (optional, defaults to power_usage_index.db)
# POWER_USAGE_DATABASE=power_usage.db

# The interval in seconds to fetch data from the API (optional, defaults to 30)
# POWER_USAGE_FETCH_INTERVAL_SECONDS=30

# Telegram bot token for sending notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Telegram chat ID for sending notifications
TELEGRAM_CHAT_ID=your_telegram_chat_id